{
  "name": "@kodus/agent-readiness",
  "version": "0.1.1",
  "description": "Evaluate how prepared your codebase is for autonomous AI coding agents",
  "type": "module",
  "bin": {
    "agent-readiness": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "bun test",
    "dev": "bun run src/index.ts",
    "typecheck": "bun x tsc --noEmit",
    "lint": "bun x biome check src/",
    "build": "bun build src/index.ts --outdir dist --target node",
    "build:web": "cd web && bun install && bun run build",
    "build:all": "bun run build && bun run build:web",
    "prepublishOnly": "bun run build:all",
    "dev:web": "cd web && bun install && bun run dev"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "ai",
    "agent",
    "readiness",
    "codebase",
    "evaluation",
    "cli",
    "kodus"
  ],
  "engines": {
    "bun": ">=1.0.0"
  },
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.4.1",
    "boxen": "^8.0.1",
    "cli-table3": "^0.6.5",
    "commander": "^13.1.0",
    "fast-glob": "^3.3.3",
    "ora": "^8.2.0",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.7.0"
  }
}
