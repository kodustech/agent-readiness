{
  "name": "kodus-agent-readiness",
  "version": "0.1.0",
  "description": "Evaluate how prepared your codebase is for autonomous AI coding agents",
  "type": "module",
  "bin": {
    "kodus-agent-readiness": "./src/index.ts"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "typecheck": "bun x tsc --noEmit",
    "lint": "bun x biome check src/",
    "build": "bun build src/index.ts --outdir dist --target node",
    "build:web": "cd web && bun install && bun run build",
    "dev:web": "cd web && bun install && bun run dev"
  },
  "keywords": [
    "ai",
    "agent",
    "readiness",
    "codebase",
    "evaluation",
    "cli",
    "kodus"
  ],
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.4.1",
    "boxen": "^8.0.1",
    "cli-table3": "^0.6.5",
    "commander": "^13.1.0",
    "fast-glob": "^3.3.3",
    "ora": "^8.2.0",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.7.0"
  }
}
